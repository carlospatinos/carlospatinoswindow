extends layout

block content
    

  div.top
    h1= signum 

  div.container
    div.content
      div.text-center
        form.form-horizontal(method="post", id="selectedWords", action='/profileReady')
          div.btn-group(data-toggle="buttons")
            each skill, i in skillsList
              label.btn.btn-primary
                input(type="checkbox", name="#{skill.skillTitle}" autocomplete="off")
                | #{skill.skillTitle}

  br
  br
  div.footer
